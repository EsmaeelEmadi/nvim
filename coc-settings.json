{
  "suggest.completionItemKindLabels": {
    "text": "t",
    "method": "m",
    "function": ""
  },

  "yaml.format.enable": true,
  "yaml.format.bracketSpacing": true,

  "suggest.enablePreview": true,
  "suggest.snippetIndicator": "•",

  "diagnostic.messageTarget": "float",
  "signature.target": "float",
  "javascript.suggestionActions.enabled": true,
  "typescript.suggestionActions.enabled": true,
  "snippets.priority": 1,

  "eslint.options": {
    "env": {
      "browser": true,
      "node": true
    }
  },
  "tsserver.formatOnType": true,
  "coc.preferences.formatOnType": true,

  "suggest.languageSourcePriority": 99,
  "coc.source.file.priority": 2,
  "coc.source.around.priority": 3,
  "coc.source.buffer.priority": 4,

  "diagnostic.errorSign": " ",
  "diagnostic.warningSign": " ",
  "diagnostic.infoSign": "",
  "diagnostic.hintSign": " ",

  "list.indicator": ">",
  "list.selectedSignText": " ",

  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "markdown",
    "graphql",
    "html",
    "yaml",
    "json",
    "python",
    "java",
    "javascript",
    "typescript",
    "typescriptreact",
    "json",
    "javascriptreact",
    "typescript.tsx",
    "svelte"
  ],
  "coc.preferences.hoverTarget": "float",

  "snippets.ultisnips.directories": ["UltiSnips", "~/.config/nvim/snips"],

  "emmet.includeLanguages": {
    "vue-html": "html",
    "javascript": "javascriptreact"
  },

  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  "wxss.validate": false,

  "explorer.width": 30,
  "explorer.file.root.template": "[icon] [git] [hidden & 1][root]",
  "explorer.icon.enableNerdfont": true,
  "explorer.previewAction.onHover": false,
  "explorer.icon.source": "vim-devicons",
  "explorer.file.showHiddenFiles": true,
  "explorer.keyMappings.global": {
    "<cr>": ["expandable?", "expand", "open"],
    "v": "open:vsplit"
  },

  "languageserver": {
    "lua": {
      "command": "/home/chris/.luambenvs/neovim4/bin/lua-lsp",
      "filetypes": ["lua"],
      "trace.server": "verbose"
    }
  },

  "bookmark.sign": "",

  "coc.source.emoji.filetypes": ["markdown"],
  "svelte.enable-ts-plugin": true
}
